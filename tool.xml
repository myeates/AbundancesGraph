<?xml version="1.0"?>
<run>
  <tool>
    <title>Lodders Abundances</title>
    <about>Graphs z or a vs abundance</about>
    <command>python @tool/abundances.py @driver</command>
    <limits><cputime>900</cputime></limits>
    <action><label>Graph</label></action>
    <control>manual</control>
    <uq>false</uq>
    <reportJobFailures>0</reportJobFailures>
  </tool>
  <input>
    <string id = 'datapath'>
      <about>
	<label>Path to input file</label>
	<description>The path, either on your desktop or on the web, to the input file. The default string loads an example from the web.</description>
      </about>
      <default>https://raw.githubusercontent.com/myeates/AbundancesGraph/master/Lodders.txt</default>
    </string>
  </input>
  <output>
    <curve id = 'zvab'>
      <about>
	<label>Z vs Abundance</label>
	<description>output graph</description>
      </about>
      <xaxis>
	<label>Abundance</label>
	<description>Abundance of given species</description>
      </xaxis>
      <yaxis>
	<label>Z</label>
	<description>Atomic number of given species</description>
	<scale>log</scale>
      </yaxis>
      <component>
	<xy>
	</xy>
      </component>
    </curve>
    <curve id = 'avab'>
      <about>
	<label>A vs Abundance</label>
	<description>output graph</description>
      </about>
      <xaxis>
	<label>Abundance</label>
	<description>Abundance of given species</description>
      </xaxis>
      <yaxis>
	<label>A</label>
	<description>Atomic mass of given species</description>
	<scale>log</scale>
      </yaxis>
      <component>
	<xy></xy>
      </component>
    </curve>
  </output>
</run>